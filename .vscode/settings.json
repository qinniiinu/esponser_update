{
  // 設置indent會以tabSize的設置為主，而非去自動偵測並套用所打開文件的indent，否則"editor.tabSize"設定會失效
  "editor.detectIndentation": false,
  // 保存會自動format內文
  "editor.formatOnSave": true,
  // 文件會在失去focus時自動保存
  // "files.autoSave": "onFocusChange",
  // format：保存時，盡量自動修復下面所列的項目的錯誤
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  // 設置以作為各種不同類型檔案的預設formatter
  "[html][css][scss][javascript][typescript][json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.suggest.insertMode": "replace"
  },
  // 打開左邊線條提示括號顏色，括號顏色會對應到左邊線條的顏色
  "editor.guides.bracketPairs": true,
  // vscode已經內建括號顏色客製化，下面是各個階層的顏色設置
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#ffd700",
    "editorBracketHighlight.foreground2": "#da70d6",
    "editorBracketHighlight.foreground3": "#87cefa",
    "editorBracketHighlight.foreground4": "#ffd700",
    "editorBracketHighlight.foreground5": "#da70d6",
    "editorBracketHighlight.foreground6": "#87cefa",
    "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
  },
  // 搭配vscode-icons擴展套件使用，來設置icon樣式
  "workbench.iconTheme": "vscode-icons",
  "cSpell.words": [
    "accu",
    "appl",
    "ARLONG",
    "astar",
    "benef",
    "benf",
    "bneficiary",
    "colspan",
    "commitlint",
    "Curr",
    "encryptor",
    "endregion",
    "Esponsor",
    "espr",
    "fullname",
    "icomoon",
    "jsencrypt",
    "kaiu",
    "maxlength",
    "pincode",
    "Registerables",
    "rushstack",
    "Settl",
    "Susp",
    "sysmessage",
    "tailwindcss",
    "Tlife",
    "unplugin"
  ],
  "prettier.configPath": ".prettierrc"
}
